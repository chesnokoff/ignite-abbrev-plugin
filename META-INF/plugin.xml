<idea-plugin version="2">
    <name>Apache Ignite abbreviation plugin</name>
    <description><![CDATA[Simplifies development with Apache Ignite
        <a href="https://cwiki.apache.org/confluence/display/IGNITE/Coding+Guidelines">coding guidelines</a>.]]>
    </description>
    <version>2.6.3</version>
    <vendor>Apache Ignite</vendor>

    <idea-version since-build="135.1"/>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <depends optional="true" config-file="scala-config.xml">org.intellij.scala</depends>
    <depends>com.intellij.properties</depends>

    <actions>
        <action id="gg-gen-getter-setter" class="org.apache.ignite.idea.action.GridGetterSetterAction"
                text="GridGain style getters and setters">
            <add-to-group group-id="GenerateGroup"/>
        </action>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection implementationClass="org.apache.ignite.idea.inspection.abbrev.GridAbbreviationInspection"
                         shortName="JavaAbbreviationUsage"
                         displayName="Incorrect Java abbreviation usage"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"
            />

        <localInspection implementationClass="org.apache.ignite.idea.inspection.comment.GridCommentInspection"
                         shortName="CommentAbsent"
                         displayName="Comment is absent"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"
            />

        <localInspection implementationClass="org.apache.ignite.idea.inspection.GridBracketInspection"
                         displayName="Illegal '{ }' for one line statement"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"
            />

        <localInspection implementationClass="org.apache.ignite.idea.inspection.GridAnnotationInspection"
                         displayName="Annotation formatting"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"/>

        <localInspection implementationClass="org.apache.ignite.idea.inspection.GridPlublicInterfaceMethodsInspection"
                         displayName='"public" modifier in interface methods'
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"/>

        <localInspection implementationClass="org.apache.ignite.idea.inspection.GridEmptyLineInspection"
                         displayName="Illegal empty line before first class element"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"
            />

        <localInspection implementationClass="org.apache.ignite.idea.inspection.GridWrongComparationInspection"
                         displayName="Illegal comparation, use equals() instead of '=='"
                         language="JAVA"
                         groupName="Apache Ignite"
                         enabledByDefault="true"
            />

        <intentionAction>
            <className>org.apache.ignite.idea.intention.GridGetterSetterGenerator</className>
            <category>Getter Setter</category>
            <descriptionDirectoryName>GridGetterSetterGenerator</descriptionDirectoryName>
        </intentionAction>

        <intentionAction>
            <className>org.apache.ignite.idea.intention.GridGetterGenerator</className>
            <category>Getter Setter</category>
            <descriptionDirectoryName>GridGetterGenerator</descriptionDirectoryName>
        </intentionAction>

        <intentionAction>
            <className>org.apache.ignite.idea.intention.GridSetterGenerator</className>
            <category>Getter Setter</category>
            <descriptionDirectoryName>GridSetterGenerator</descriptionDirectoryName>
        </intentionAction>

        <intentionAction>
            <className>org.apache.ignite.idea.intention.GridGetterSetterSubstitutor</className>
            <category>Getter Setter</category>
            <descriptionDirectoryName>GridGetterSetterSubstitutor</descriptionDirectoryName>
        </intentionAction>

        <projectService serviceImplementation="org.apache.ignite.idea.inspection.abbrev.GridAbbreviationConfig" />
    </extensions>
</idea-plugin>
